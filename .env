# Configurações do Servidor
HOST=0.0.0.0
PORT=8000

# Configurações do Whisper
# Modelos disponíveis: tiny, base, small, medium, large-v3, distil-large-v3
WHISPER_MODEL=base

# Device: cpu ou cuda (para GPU)
WHISPER_DEVICE=cpu

# Tipo de computação: int8, int16, float16, float32
# int8 é recomendado para CPU (mais rápido, menos memória)
WHISPER_COMPUTE_TYPE=int8

# Configurações de Performance
# Tamanho máximo do arquivo em MB
MAX_FILE_SIZE=100

# Número de threads para CPU (recomendado: 2-8)
OMP_NUM_THREADS=8

# Configurações de Transcrição Padrão
DEFAULT_BEAM_SIZE=5
DEFAULT_VAD_FILTER=true
DEFAULT_WORD_TIMESTAMPS=false

# Configurações de Segurança
# Origens permitidas para CORS (separadas por vírgula)
CORS_ORIGINS=*

# Configurações de Logging
# Níveis: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Diretórios
TEMP_DIR=/tmp/uploads

# Ambiente de execução
# Valores: development, production, test
ENVIRONMENT=development 